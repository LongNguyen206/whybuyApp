<p id="notice"><%= notice %></p>

<h1>My Listings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Rate</th>
      <th>Deposit</th>
      <th>Description</th>
      <th>Date from</th>
      <th>Date to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.rate %></td>
        <td><%= listing.deposit %></td>
        <td><%= listing.description %></td>
        <td><%= listing.date_from %></td>
        <td><%= listing.date_to %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>