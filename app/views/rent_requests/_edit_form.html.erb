
<%= simple_form_for(@rent_request, url: listing_rent_request_path(@listing,@rent_request)) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :days,
                :label => "I want to rent it for",
                :placeholder => "days" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
